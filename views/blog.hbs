      .nav-logo {
        width: 60px;
        height: 40px;
        padding-top: 15px;
        padding-bottom: 15px;
        margin-left: 50px;
      }

      .btn-navbar-home {
        cursor: pointer;
        position: relative;
        display: inline-block;
        padding: 0;
        font-size: 20px;
        color: black;
      }

      .btn-navbar-home::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 100%;
        height: 3px;
        background-color: black;
        transform: scaleX(0);
        transform-origin: center;
        transition: transform 0.3s ease;
      }

      .btn-navbar-home:hover::after {
        transform: scaleX(1);
        transform-origin: center;
      }

      .btn-navbar-myproject {
        cursor: pointer;
        position: relative;
        display: inline-block;
        font-size: 20px;
        color: black;
      }

      .btn-navbar-myproject::after {
