        }
      }

      .hamburger {
        display: none;
        height: 50px;
        width: 50px;
        position: relative;
        cursor: pointer;
        z-index: 2;
      }

      .hamburger span {
        height: 5px;
        width: 100%;
        background-color: black;
        border-radius: 25px;
        position: absolute;
        top: 50%;
        right: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.3s ease;
      }

      .hamburger span:nth-child(1) {
        top: 25%;
      }

      .hamburger span:nth-child(3) {
        top: 75%;
      }

      .hamburger.active span:nth-child(3) {
        top: 50%;
        transform: translate(-50%, -50%) rotate(-45deg);
        background-color: white;
      }

      .hamburger.active span:nth-child(2) {
        opacity: 0;
        background-color: white;
      }

      .hamburger.active span:nth-child(1) {
        top: 50%;
        transform: translate(-50%, -50%) rotate(45deg);
        background-color: white;
      }

      .menu {
        position: absolute;
        top: 0;
        right: 0;
        width: 300px;
        height: auto;
        background: black;
        border-top-left-radius: 150px;
        border-bottom-left-radius: 150px;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        transform: translate(100%, -100%);
        transition: transform 0.3s ease;
        z-index: 1;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .menu.active {
        transform: translate(0, 0);
      }

      .menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 2px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .menu li {
        margin: 5px 0;
        padding: 5px 0;
      }

      .menu a {
        color: white;
        font-size: 14px;
        text-decoration: none;
        display: block;
        text-align: center;
        padding: 8px;
      }

      .menu a:hover {
        font-weight: bold;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 40%;
        margin: auto;
        margin-top: 50px;
      }

      .btn-1 {
        background-color: black;
        color: white;
        font-weight: bold;
        border-radius: 15px;
        cursor: pointer;
        margin-top: 20px;
        margin-bottom: 20px;
        padding-top: 7px;
        padding-bottom: 7px;
        padding-left: 0px !important;
        padding-right: 0px !important;
      }
      .btn-1 a {
