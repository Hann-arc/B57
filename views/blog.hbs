      }

      .cv {
        display: flex;
        text-align: center;
        align-items: center;
        gap: 13px;
        font-size: 18px;
      }

      .cv img {
        cursor: pointer;
      }

      .icon {
        display: flex;
        flex-direction: row;
        margin-top: 20px;
        gap: 30px;
        font-size: 30px;
        margin-left: 50px;
      }

      .icon a {
        color: black;
        border-radius: 50%;
        transition: 0.5s ease;
      }

      .icon a:hover {
        -webkit-transform: scale(1.3);
        -ms-transform: scale(1.3);
        transform: scale(1.3);
        transition: 0.5s ease;
      }

      .card {
        box-shadow: -2px 2px 12px 1px rgba(0, 0, 0, 0.75);
        -webkit-box-shadow: -2px 2px 12px 1px rgba(0, 0, 0, 0.75);
