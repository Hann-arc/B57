            </li>
         </ul>
          <button class="btn btn-dark" type="submit">
            <a href="/contact" style="text-decoration: none; color: white"
              >Contact Me</a
            >
          </button>
        </div>
      </div>
    </nav>

    <!-- NAVBAR END -->

    <!-- FORM -->
    
    <div class="container-md mb-5 container-myproject" style="max-width: 800px;">
      <h1 class="text-center" style="font-size: 30px;">ADD MY PROJECT</h1>
      <form class="mx-lg-5" action="/myproject" method="POST">
          <div class="mb-3 mt-5">
          <label for="blog-name" class="form-label">Project Name</label>
          <input type="text" name="name" class="form-control" id="blog-name" />
        </div>
    
        <div class="container text-center">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="label-start-date" class="form-label">Start Date</label>
              <input
                type="date"
                class="form-control"
                name="start_date"
                id="label-start-date"
              />
            </div>
            <div class="col-md-6 mb-3">
              <label for="label-end-date" class="form-label">End Date</label>
              <input
                type="date"
                class="form-control"
                name="end_date"
                id="label-end-date"
                aria-describedby="emailHelp"
              />
            </div>
          </div>
        </div>
    
        <div class="form-floating mb-3">
          <textarea
            class="form-control"
            placeholder="Leave a comment here"
            name="description"
            id="description"
            style="height: 100px;"
          ></textarea>
          <label for="description">Description</label>
        </div>
    
        <label for="tech" class="mb-3">Technologies :</label>
        <div class="row">
          <div class="col-md-6 p-2">
            <div class="mb-3 form-check">
              <input style="cursor: pointer;"
                type="checkbox"
                class="form-check-input"
                name="tech"
                id="NodeJs"
                value="NodeJs"
              />
              <label class="form-check-label" for="NodeJs" style="cursor: pointer;">Node Js</label>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="mb-3 form-check">
              <input style="cursor: pointer;"
                type="checkbox"
                class="form-check-input"
                name="tech"
                id="Laravel"
                value="Laravel"
              />
              <label class="form-check-label" for="Laravel" style="cursor: pointer;">Laravel</label>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="mb-3 form-check">
              <input style="cursor: pointer;"
                type="checkbox"
                class="form-check-input"
                name="tech"
                id="ReactJs"
                value="ReactJs"
              />
              <label class="form-check-label" for="ReactJs" style="cursor: pointer;">React Js</label>
            </div>
          </div>
          <div class="col-md-6 p-2">
            <div class="mb-3 form-check">
              <input style="cursor: pointer;"
                type="checkbox"
                class="form-check-input"
                name="tech"
                id="JavaScript"
                value="JavaScript"
              />
              <label class="form-check-label" for="JavaScript" style="cursor: pointer;">JavaScript</label>
            </div>
          </div>
        </div>
    
        <div class="mb-5 mt-4">
          <label for="file-upload" class="form-label">Upload image</label>
          <input class="form-control" type="file" id="file-upload" />
        </div>
    
        <button type="submit" class="btn btn-dark float-end">Submit</button>
      </form>
    </div>
    

    <!-- FORM END -->
    <script src="/assets/js/project.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
