<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/assets/css/underline.css">
</head>
<body>

<!-- INI NAVBAR -->

     {{> navbar}}

    <!-- NAVBAR END -->

    {{!-- FORM --}}

     <div data-aos="zoom-in" data-aos-delay="200" class="container-md container-contactme" style="max-width: 600px; margin-top: 50px;" >

        {{#if messages.error-edit-profile}}
          <div class="alert alert-warning d-flex align-items-center" role="alert" style="padding: 0.5rem 1rem;">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
             <div>{{messages.error-edit-profile}}</div>
           </div>
        {{/if}}
        {{#if messages.error-email-exist}}
          <div class="alert alert-warning d-flex align-items-center" role="alert" style="padding: 0.5rem 1rem;">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
             <div>{{messages.error-email-exist}}</div>
           </div>
        {{/if}}

      <h1 class="text-center">Edit Profil</h1>

      {{#if user}}
      <form enctype="multipart/form-data" data-aos="zoom-in" data-aos-delay="400" action="/edit-profile/{{user.id}}" method="post" class="mt-5">
      <div class="col-12 mb-3">
         <label for="nama" class="form-label">New Name :</label>
         <input name="edit_name" type="text"  class="form-control" id="nama" aria-describedby="nameHelp" placeholder="Edit your name"/>
      </div>
        <div class="row">
          <div class="col-12 mb-3">
            <label for="email" class="form-label">New Email :</label>
            <input
            name="edit_email"
              type="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
              placeholder="Edit your email"
            />
          </div>
        </div>

       <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">New Password :</label>
        <input type="password" name="edit_password" placeholder="Edit your password" class="form-control" id="exampleInputPassword1" >
        </div>

        <div class="mb-5 mt-4">
          <label for="file-upload" class="form-label">Edit image :</label>
          <input class="form-control" type="file" id="file-upload" name="image" />
        </div>
    
        <button onclick="confirmSaveChanges(event)" type="submit" class="btn btn-dark float-end">Save Changes</button>

        
      </form>

      {{/if}}

    </div>

    {{!-- FORM END --}}

  <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
     <script>
  AOS.init();
</script>
<script>
function confirmSaveChanges(event) {
    event.preventDefault();
    if (confirm("Are you sure you want to save the changes?")) {
        event.target.closest("form").submit();
    } else {
        alert("You canceled the changes!");
    }
}
</script>

</body>
</html>